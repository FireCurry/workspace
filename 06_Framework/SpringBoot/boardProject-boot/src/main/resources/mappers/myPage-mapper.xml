<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<!-- 연결할 인터페이스의 패키지명.인터페이스명을 작성 -->
<mapper namespace="edu.kh.project.myPage.model.mapper.MyPageMapper">

	<update id="info" parameterType="Member">
		UPDATE "MEMBER" 
		SET MEMBER_NICKNAME = #{memberNickname}, MEMBER_TEL = #{memberTel}, MEMBER_ADDRESS = #{memberAddress}
		WHERE MEMBER_NO = #{memberNo}
	</update>

	<!-- 비밀번호 조회 -->
	<select id="selectMemberPw" resultType="String">
		SELECT MEMBER_PW
		FROM "MEMBER"
		WHERE MEMBER_NO = #{memberNo}
	</select>
	
	<!-- 비밀번호 변경 -->
	<update id="changePw">
		UPDATE "MEMBER"
		SET MEMBER_PW = #{newPw}
		WHERE MEMBER_NO = #{memberNo}
	</update>
	
	<!-- 탈퇴 처리 -->
	<update id="secession">
		UPDATE "MEMBER"
		SET MEMBER_DEL_FL = 'Y'
		WHERE MEMBER_NO = #{memberNo}
	</update>
	
	<update id="profile">
		UPDATE "MEMBER" SET
		PROFILE_IMG = #{profileImg}
		WHERE MEMBER_NO = #{memberNo}
	</update>
</mapper>