<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<!-- 연결할 인터페이스의 패키지명.인터페이스명을 작성 -->
<mapper namespace="edu.kh.project.admin.model.mapper.AjaxMapper">
	
	<!-- 회원 번호로 이메일 조회 -->
	<select id="selectMemberNo" resultType="string">
		SELECT MEMBER_EMAIL FROM "MEMBER" WHERE MEMBER_NO = #{memberNo}
	</select>
	
	<select id="selectEmail" resultType="string">
		SELECT MEMBER_TEL FROM "MEMBER" WHERE MEMBER_EMAIL = #{inputEmail}
	</select>
	
	<!-- 회원 번호 일치하는 회원 정보 조회 -->
	<select id="selectMember" resultType="Member">
		SELECT MEMBER_NO, MEMBER_EMAIL, MEMBER_NICKNAME , MEMBER_DEL_FL,
        	MEMBER_TEL , MEMBER_ADDRESS , AUTHORITY ,
        	TO_CHAR(ENROLL_DATE, 'YYYY"년" MM"월" DD"일" HH24"시" MI"분" SS"초"') AS ENROLL_DATE 
    	FROM "MEMBER"
    	WHERE MEMBER_NO = #{no}
	</select>
	
	<!--일부 일치하는 이메일 모두 조회-->
	
	<!--mapper의 반환형이 List인 경우
		조회 결과 1행씩 List에 자동 추가된다!
		-> resultType을 list가 아닌 List에 추가되는 요소의 타입을 작성
	-->
	
	<!-- ${keyword} 사용 이유 ($ 사용 이유):
		# 사용 시 따옴표가 추가로 작성돼 SQL 문법 오류 발생-->
	<select id="selectEmailList" resultType="string">
		SELECT MEMBER_EMAIL FROM "MEMBER"
		WHERE MEMBER_EMAIL LIKE '%${keyword}%'
	</select>
	
	<!-- 모든 회원 정보 조회 -->
	<select id="selectAll" resultType="Member">
		SELECT MEMBER_NO, MEMBER_EMAIL, MEMBER_NICKNAME, MEMBER_TEL, MEMBER_DEL_FL
		FROM "MEMBER" ORDER BY MEMBER_NO DESC
	</select>
	
	<!-- 탈퇴 여부 수정 -->
	<update id="updateFlag">
		UPDATE "MEMBER" SET
		MEMBER_DEL_FL = #{flag}
		WHERE MEMBER_NO = #{targetNo}
	</update>
</mapper>